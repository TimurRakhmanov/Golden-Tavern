{{template "admin" .}}

{{define "page-title"}}
Reservation Calender
{{ end }}

{{define "content"}}
{{$now := index .Data "now"}}
{{$rooms := index .Data "rooms"}}
{{$dim := index .IntMap "days_in_month"}}
<div class="col-md-12">
    <div class="text-center">
        <h3>{{formatDate $now "January"}} {{formatDate $now "2006"}}</h3>
    </div>
    <div class="float-start">
        <a class="btn btn-sm btn-outline-secondary" 
        href="/admin/reservations-calender?y={{index .StringMap "last_month_year"}}&m={{index .StringMap "last_month"}}">
        &lt;&lt;
        </a>
    </div>
    <div class="float-end">
        <a class="btn btn-sm btn-outline-secondary" 
        href="/admin/reservations-calender?y={{index .StringMap "next_month_year"}}&m={{index .StringMap "next_month"}}">
        &gt;&gt;
        </a>
    </div>
    <div class="clearfix"></div>
</div>
{{ end }}
